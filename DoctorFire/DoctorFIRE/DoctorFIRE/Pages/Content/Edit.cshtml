@page
@model DoctorFIRE.Pages.Content.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Content</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Content.Id" />
            <div class="form-group">
                <label asp-for="Content.Text" class="control-label"></label>
                <input asp-for="Content.Text" class="form-control" />
                <span asp-validation-for="Content.Text" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Content.Reference" class="control-label"></label>
                <input asp-for="Content.Reference" class="form-control" />
                <span asp-validation-for="Content.Reference" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content.ContextId" class="control-label"></label>
                <select asp-for="Content.ContextId" class="form-control" asp-items="ViewBag.ContextId"></select>
                <span asp-validation-for="Content.ContextId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
